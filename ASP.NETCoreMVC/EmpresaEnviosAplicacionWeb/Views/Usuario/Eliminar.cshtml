@using DTOs
@model UsuarioDTO

@{
    ViewData["Title"] = "Eliminar Usuario";
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion">
        <h1 class="text-center heading mb-5">Eliminar Usuario</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @if (TempData["Error"] is not null)
                {
                    <div class="alert alert-danger text-center text-uppercase fw-bold mb-5" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                        @TempData["Error"]
                    </div>
                }

                <div class="card shadow border">
                    <div class="card-header bg-danger text-white text-center">
                        <h4 class="card-title">
                            <i class="bi bi-person-x"></i>
                            Estás a punto de eliminar al usuario: <strong>@Model.Nombre</strong>
                        </h4>
                        <p class="card-subtitle text-light">
                            Esta acción es irreversible y todos los datos asociados serán eliminados permanentemente.
                            Por favor, confirma si deseas continuar.
                        </p>
                    </div> @* card-header *@

                    <div class="card-body">
                        <ul class="list-group list-group-flush px-3">
                            <li class="list-group-item">
                                <strong>@Html.DisplayNameFor(model => model.Id):</strong> @Html.DisplayFor(model => model.Id)
                            </li>
                            <li class="list-group-item">
                                <strong>@Html.DisplayNameFor(model => model.Nombre):</strong> @Html.DisplayFor(model => model.Nombre)
                            </li>
                            <li class="list-group-item">
                                <strong>@Html.DisplayNameFor(model => model.Email):</strong> @Html.Raw(Model.Email)
                            </li>
                            <li class="list-group-item">
                                <strong>Contraseña: </strong> @Html.DisplayFor(model => model.Password)
                            </li>
                            <li class="list-group-item">
                                <strong>Fecha de Registro: </strong> @Html.DisplayFor(model => model.FechaRegistro)
                            </li>
                            <li class="list-group-item">
                                <strong>Fecha de Nacimiento: </strong> @Html.DisplayFor(model => model.FechaNacimiento)
                            </li>
                            <li class="list-group-item">
                                <strong>Teléfono: </strong> @Html.DisplayFor(model => model.Telefono)
                            </li>
                            <li class="list-group-item">
                                <strong>Dirección: </strong> @Html.DisplayFor(model => model.Direccion)
                            </li>
                            <li class="list-group-item">
                                <strong>Documento de Identidad: </strong> @Html.DisplayFor(model => model.DocumentoIdentidad)
                            </li>
                            <li class="list-group-item">
                                <strong>Rol: </strong> @Html.DisplayFor(model => model.NombreRol)
                            </li>
                        </ul>
                    </div> @* card-body *@

                    <div class="card-footer">
                        <form asp-action="Eliminar" class="form-group d-flex justify-content-between align-items-end py-3">
                            <button type="submit" class="btn btn-danger fw-bold px-4 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            <a asp-action="Listado" class="btn btn-primary fw-bold px-4 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </form>
                    </div> @* card-footer *@

                </div> @* card *@
            </div> @* col-md-6 *@
        </div> @* row *@
    </section>
}
@using DTOs
@using EmpresaEnviosAplicacionWeb.Models
@model UsuarioVM

@{
    ViewData["Title"] = "Crear Usuario";
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion">
        <h1 class="text-center heading mb-5">Crear Usuario</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @* Alertas *@
                @if (TempData["Error"] is not null)
                {
                    <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                        @TempData["Error"]
                    </div>
                }

                <form asp-action="Crear">
                    <fieldset>
                        <legend class="fw-bold text-primary mb-3">
                            <i class="bi bi-person-plus"> </i>
                            Crea tu cuenta
                        </legend>
                        <p class="text-muted mb-3">Completa los siguientes campos para registrarte y acceder a nuestra plataforma.</p>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.FechaRegistro" class="control-label">Fecha de Registro</label>
                            <input asp-for="UsuarioDTO.FechaRegistro" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                            <span asp-validation-for="UsuarioDTO.FechaRegistro" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.Nombre" class="control-label">Nombre</label>
                            <input asp-for="UsuarioDTO.Nombre" class="form-control" />
                            <span asp-validation-for="UsuarioDTO.Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.Email" class="control-label">Email</label>
                            <input asp-for="UsuarioDTO.Email" class="form-control" required/>
                            <span asp-validation-for="UsuarioDTO.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.Password" class="control-label">Contraseña</label>
                            <div class="input-group">
                                <input asp-for="UsuarioDTO.Password" type="password" class="form-control" required />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="UsuarioDTO.Password" class="text-danger"></span>
                        </div>                       
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                            <input asp-for="UsuarioDTO.FechaNacimiento" type="date" class="form-control" value="@((Model.UsuarioDTO.FechaNacimiento == DateTime.MinValue) ? "" : Model.UsuarioDTO.FechaNacimiento.ToString("yyyy-MM-ddTHH:mm"))" />
                            <span asp-validation-for="UsuarioDTO.FechaNacimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.Telefono" class="control-label">Teléfono</label>
                            <input asp-for="UsuarioDTO.Telefono" type="number" class="form-control" />
                            <span asp-validation-for="UsuarioDTO.Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.Direccion" class="control-label">Dirección</label>
                            <input asp-for="UsuarioDTO.Direccion" class="form-control" />
                            <span asp-validation-for="UsuarioDTO.Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioDTO.DocumentoIdentidad" class="control-label">Documento de Identidad</label>
                            <input asp-for="UsuarioDTO.DocumentoIdentidad" type="number" class="form-control" value="@(Model.UsuarioDTO.DocumentoIdentidad == 0 ? "" : Model.UsuarioDTO.DocumentoIdentidad.ToString())" />
                            <span asp-validation-for="UsuarioDTO.DocumentoIdentidad" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">                            
                            @if (Context.Session.GetString("Rol") == "Administrador")
                            {
                                <label asp-for="UsuarioDTO.RolId" class="control-label">Rol</label>
                                <select asp-for="UsuarioDTO.RolId" class="form-select">

                                    <option value="">Seleccione</option>

                                    @foreach (var rol in Model.Roles)
                                    {
                                        <option value="@rol.Id">@rol.Nombre</option>
                                    }
                                </select>
                            }
                            else if (Context.Session.GetString("Rol") == "Funcionario")
                            {
                                RolDTO rolDTO = Model.Roles.First(r => r.Nombre == "Cliente");

                                <input type="hidden" asp-for="UsuarioDTO.RolId" value="@rolDTO.Id" />
                            }
                            <span asp-validation-for="UsuarioDTO.RolId" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="form-group d-flex justify-content-between align-items-end py-3 gap-3">
                        <button type="submit" class="btn btn-success fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-person-plus-fill"></i> Crear
                        </button>
                        @{
                            var rol = Context.Session.GetString("Rol");
                            var controladorDestino = rol == "Administrador" ? "Usuario" : (rol == "Funcionario" ? "Envio" : "Home");
                        }

                        <a asp-action="Listado" asp-controller="@controladorDestino" class="btn btn-outline-secondary fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left-circle-fill"></i> Volver
                        </a>

                    </div>
                </form>
            </div> <!-- col-md-6 -->
        </div> <!-- row -->
    </section> <!-- section -->
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword(button) {
            const input = button.previousElementSibling;
            const icon = button.querySelector("i");
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        }
    </script>
}

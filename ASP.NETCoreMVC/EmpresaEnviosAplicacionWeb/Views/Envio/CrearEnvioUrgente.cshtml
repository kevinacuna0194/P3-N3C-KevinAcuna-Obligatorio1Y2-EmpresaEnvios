@using DTOs
@model EnvioDTO

@{
    ViewData["Title"] = "Crear Envio Urgente";
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion seccion-expandida">
        <h1 class="text-center heading mb-5">Crear Envio Urgente</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @* Alertas *@
                @if (TempData["Error"] is not null)
                {
                    <div class="alert alert-danger text-center text-uppercase fw-bold mb-5" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                        @TempData["Error"]
                    </div>
                }

                <form asp-action="CrearEnvioUrgente">
                    <fieldset>
                        <legend class="fw-bold text-primary">
                            <i class="bi bi-box-seam"></i> Crear nuevo envío
                        </legend>
                        <p class="text-muted">Ingresa los detalles para registrar un nuevo envío.</p>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="EmailCliente" class="control-label">Email Cliente</label>
                            <input asp-for="EmailCliente" type="email" class="form-control" required />
                            <span asp-validation-for="EmailCliente" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Peso" class="control-label"></label>
                            <input asp-for="Peso" class="form-control" type="number" step="0.01" value="@(Model.Peso == 0 ? "" : Model.Peso.ToString())" />
                            <span asp-validation-for="Peso" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DireccionPostal" class="form-label">Dirección Postal</label>
                            <input asp-for="DireccionPostal" class="form-control" />
                            <span asp-validation-for="DireccionPostal" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="form-group d-flex justify-content-between align-items-end py-3 gap-3">
                        <button type="submit" class="btn btn-danger fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-lightning-fill"></i> Crear Urgente
                        </button>
                        <a asp-action="Listado" class="btn btn-outline-secondary fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left-circle-fill"></i> Volver
                        </a>
                    </div>

                </form>
            </div> <!-- col-md-6 -->
        </div> <!-- row -->
    </section> <!-- section -->
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

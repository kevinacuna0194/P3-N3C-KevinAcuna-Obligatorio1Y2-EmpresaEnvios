@using EmpresaEnviosAplicacionWeb.Models
@using Enum
@model FormBuscarPorEstadoYRangoFechasVM

@{
    ViewData["Title"] = "Buscar Envios Por Estado Y Rango Fechas";

    @functions {
        string ObtenerClaseEstado(EstadoEnvio estado)
        {
            return estado switch
            {
                EstadoEnvio.EnProcesoEntrega => "bg-warning text-dark rounded px-2 py-1", // Amarillo
                EstadoEnvio.Finalizado => "bg-success text-dark rounded px-2 py-1", // Verde
                _ => "bg-secondary text-white rounded px-2 py-1" // Por defecto, Gris
            };
        }
    }

    var rol = Context.Session.GetString("Rol");
    var token = Context.Session.GetString("Token");
    bool usuarioLogueado = !string.IsNullOrEmpty(token);
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="@(Model.BusquedaEjecutada ? "seccion" : "seccion seccion-expandida")">

        <h1 class="text-center heading mb-5">Filtrar Envíos por Estado y Fecha</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @* Alertas *@
                @if (TempData["Error"] is not null)
                {
                    <div class="alert alert-danger text-center text-uppercase fw-bold mb-5" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                        @TempData["Error"]
                    </div>
                } 

                <form asp-action="BuscarPorEstadoYRangoFechas" method="get">

                    <fieldset>
                        <legend class="fw-bold text-primary">
                            <i class="bi bi-search me-2"></i> Búsqueda de Envíos por Estado y Fecha
                        </legend>
                        <p class="text-muted">
                            Consultá los envíos realizados según su estado actual y filtralos dentro de un rango de fechas específico.
                        </p>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaInicio" class="control-label"></label>
                            <input asp-for="FechaInicio" class="form-control" type="date"/>
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaFin" class="control-label"></label>
                            <input asp-for="FechaFin" class="form-control" type="date"/>
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EstadoSeleccionado" class="control-label">Estados</label>
                            <select class="form-select" asp-for="EstadoSeleccionado">
                                <option value="">Seleccione</option>
                                @foreach (var estado in Model.EstadosEnvio)
                                {
                                    <option value="@((int)estado)">@(estado == EstadoEnvio.EnProcesoEntrega ? "En Proceso Entrega" : estado.ToString())</option>
                                }
                            </select>
                            <span asp-validation-for="EstadoSeleccionado" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <div class="form-group d-flex justify-content-between align-items-end py-3 gap-3">
                        <button type="submit" class="btn btn-primary fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="ListadoCliente" asp-controller="Envio" class="btn btn-outline-secondary fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left-circle-fill"></i> Volver
                        </a>
                    </div>
                </form>
            </div> <!-- col-md-6 -->
        </div> <!-- row -->
    </section> <!-- section -->

    <section class="seccion">

        @if (Model.BusquedaEjecutada)
        {
            <div class="d-flex justify-content-center align-items-center mb-5">
                <div class="col-md-6 alert alert-info text-center fw-medium">
                    <p class="mb-0">
                        Resultados para el estado
                        <strong>
                            @{
                                var estadoNombre = ((EstadoEnvio)Model.EstadoSeleccionado) == EstadoEnvio.EnProcesoEntrega
                                ? "En Proceso Entrega"
                                : ((EstadoEnvio)Model.EstadoSeleccionado).ToString();
                            }
                            @estadoNombre
                        </strong> entre
                        <strong>@Model.FechaInicio.ToShortDateString()</strong> y
                        <strong>@Model.FechaFin.ToShortDateString()</strong>.
                    </p>
                </div>
            </div>
        }        

        @if (Model.BusquedaEjecutada && Model.EnviosVM.EnviosComunes.Any())
        {
            <div class="row flex-column align-items-center text-center text-md-start flex-md-row">
                <h5 class="fw-bold text-secondary">Envíos Comunes con Seguimiento</h5>
                <p class="text-muted">Visualiza todos los envíos estándar junto con su información de seguimiento actualizada.</p>
            </div>

            <div class="table-responsive shadow border rounded">
                <table class="table table-sm table-hover table-striped table-bordered text-center my-4">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="fw-bold">Id</th>
                            <th class="fw-bold">Nº Tracking</th>
                            <th class="fw-bold">Empleado</th>
                            <th class="fw-bold">Email Cliente</th>
                            <th class="fw-bold">Peso</th>
                            <th class="fw-bold">Fecha Salida</th>
                            <th class="fw-bold">Fecha Entrega</th>
                            <th class="fw-bold">Agencia</th>
                            <th class="fw-bold">Estado</th>
                            <th class="fw-bold">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var envio in Model.EnviosVM.EnviosComunes)
                        {
                            <tr>
                                <td>@envio.Id</td>
                                <td>@envio.NumeroTracking</td>
                                <td>@envio.NombreEmpleado</td>
                                <td>@envio.EmailCliente</td>
                                <td>@envio.Peso</td>
                                <td>@envio.FechaSalida.ToString("dd/MM/yyyy")</td>
                                <td>@(envio.FechaEntrega.HasValue ? envio.FechaEntrega.Value.ToString("dd/MM/yyyy") : "Sin asignar")</td>
                                <td>@envio.NombreAgencia</td>
                                <td class="@ObtenerClaseEstado(envio.Estado) fw-bold">
                                    @(envio.Estado == EstadoEnvio.EnProcesoEntrega ? "En Proceso" : envio.Estado)
                                </td>
                                <td class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#seguimiento-@envio.Id"
                                            aria-expanded="false"
                                            aria-controls="seguimiento-@envio.Id"
                                            title="Ver Seguimiento">
                                        <i class="bi bi-geo-alt-fill"></i>
                                    </button>
                                </td>
                            </tr>

                            <tr class="collapse bg-light" id="seguimiento-@envio.Id">
                                <td colspan="10">
                                    <div class="text-start px-3 py-2">
                                        @if (envio.Seguimientos != null && envio.Seguimientos.Any())
                                        {
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <strong class="text-primary">
                                                        <i class="bi bi-clock-history"></i> Historial de Seguimientos:
                                                    </strong>
                                                    <ul class="list-group mt-3">
                                                        @foreach (var seguimiento in envio.Seguimientos.OrderByDescending(s => s.Fecha))
                                                        {
                                                            <li class="list-group-item bg-light border-start border-4 border-primary shadow-sm mb-2 rounded">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <span class="text-primary fw-semibold">
                                                                        <i class="bi bi-calendar-check me-1"></i>
                                                                        @seguimiento.Fecha.ToString("dd/MM/yyyy HH:mm")
                                                                    </span>
                                                                </div>
                                                                <p class="mb-1 text-dark">
                                                                    <i class="bi bi-person-circle me-1 text-secondary"></i>
                                                                    <strong>Empleado:</strong> @seguimiento.NombreEmpleado
                                                                </p>
                                                                <p class="mb-0 text-muted fst-italic">
                                                                    <i class="bi bi-chat-left-quote me-1"></i>
                                                                    "@seguimiento.Comentario"
                                                                </p>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning d-flex align-items-center my-2" role="alert">
                                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                No hay información de seguimiento disponible.
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex align-items-center justify-content-center my-3">
                <i class="bi bi-truck text-muted me-2"></i>
                <small class="text-muted">Total de envíos: @Model.EnviosVM.EnviosComunes.Count()</small>
            </div>
        }               

        @if (Model.BusquedaEjecutada && Model.EnviosVM.EnviosUrgentes.Any())
        {
            <div class="row flex-column align-items-center text-center text-md-start flex-md-row mt-4">
                <h5 class="fw-bold text-danger">Listado de envíos urgentes</h5>
                <p class="text-muted">Explorá todos tus envíos urgentes junto con su historial de seguimiento detallado y actualizado en tiempo real.</p>
            </div> 

            <div class="table-responsive shadow border rounded">
                <table class="table table-sm table-hover table-striped table-bordered text-center my-4">
                    <thead class="bg-danger text-white">
                        <tr>
                            <th class="fw-bold">Id</th>
                            <th class="fw-bold">Nº Tracking</th>
                            <th class="fw-bold">Empleado</th>
                            <th class="fw-bold text-truncate" style="max-width: 150px;">Email Cliente</th>
                            <th class="fw-bold">Peso</th>
                            <th class="fw-bold">Fecha Salida</th>
                            <th class="fw-bold">Fecha Entrega</th>
                            <th class="fw-bold text-truncate" style="max-width: 180px;">Dirección Postal</th>
                            <th class="fw-bold">Entrega Eficiente</th>
                            <th class="fw-bold">Estado</th>
                            <th class="fw-bold">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var envio in Model.EnviosVM.EnviosUrgentes)
                        {
                            <tr>
                                <td>@envio.Id</td>
                                <td>@envio.NumeroTracking</td>
                                <td>@envio.NombreEmpleado</td>
                                <td class="text-truncate" style="max-width: 150px;">@envio.EmailCliente</td>
                                <td>@envio.Peso</td>
                                <td>@envio.FechaSalida.ToString("dd/MM/yyyy")</td>
                                <td>@(envio.FechaEntrega.HasValue ? envio.FechaEntrega.Value.ToString("dd/MM/yyyy") : "Sin asignar")</td>
                                <td class="text-truncate" style="max-width: 180px;">@envio.DireccionPostal</td>
                                <td>@(envio.EntregaEficiente == true ? "Sí" : "No")</td>
                                <td class="@ObtenerClaseEstado(envio.Estado) fw-bold">
                                    @(envio.Estado == EstadoEnvio.EnProcesoEntrega ? "En Proceso" : envio.Estado)
                                </td>
                                <td class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#seguimiento-urgente-@envio.Id"
                                            aria-expanded="false"
                                            aria-controls="seguimiento-urgente-@envio.Id"
                                            title="Ver Seguimiento">
                                        <i class="bi bi-geo-alt-fill"></i>
                                    </button>
                                </td>
                            </tr>

                            <tr class="collapse bg-light" id="seguimiento-urgente-@envio.Id">
                                <td colspan="11">
                                    <div class="text-start px-3 py-2">
                                        @if (envio.Seguimientos != null && envio.Seguimientos.Any())
                                        {
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <strong class="text-danger">
                                                        <i class="bi bi-clock-history"></i> Historial de Seguimientos:
                                                    </strong>
                                                    <ul class="list-group mt-3">
                                                        @foreach (var seguimiento in envio.Seguimientos.OrderByDescending(s => s.Fecha))
                                                        {
                                                            <li class="list-group-item bg-light border-start border-4 border-danger shadow-sm mb-2 rounded">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <span class="text-danger fw-semibold">
                                                                        <i class="bi bi-calendar-check me-1"></i>
                                                                        @seguimiento.Fecha.ToString("dd/MM/yyyy HH:mm")
                                                                    </span>
                                                                </div>
                                                                <p class="mb-1 text-dark">
                                                                    <i class="bi bi-person-circle me-1 text-secondary"></i>
                                                                    <strong>Empleado:</strong> @seguimiento.NombreEmpleado
                                                                </p>
                                                                <p class="mb-0 text-muted fst-italic">
                                                                    <i class="bi bi-chat-left-quote me-1"></i>
                                                                    "@seguimiento.Comentario"
                                                                </p>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning d-flex align-items-center my-2" role="alert">
                                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                No hay información de seguimiento disponible.
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex align-items-center justify-content-center mt-3">
                <i class="bi bi-truck text-muted me-2"></i>
                <small class="text-muted">
                    Total de envíos: @Model.EnviosVM.EnviosUrgentes.Count()
                </small>
            </div>

            <div class="d-flex align-items-center justify-content-center my-1">
                <i class="bi bi-truck text-success me-2"></i>
                <small class="fw-bold text-success">
                    Total de envíos registrados: @(Model.EnviosVM.EnviosComunes.Count() + @Model.EnviosVM.EnviosUrgentes.Count())
                </small>
            </div>
        }

        @if (Model.BusquedaEjecutada &&
            (Model.EnviosVM?.EnviosComunes == null || !Model.EnviosVM.EnviosComunes.Any()) &&
            (Model.EnviosVM?.EnviosUrgentes == null || !Model.EnviosVM.EnviosUrgentes.Any()))
        {
            <div class="alert alert-info text-center mt-4" role="alert">
                <i class="bi bi-search me-2"></i>
                No se encontraron resultados para los filtros aplicados. Verificá los parámetros y volvé a intentarlo.
            </div>
        }
    </section>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

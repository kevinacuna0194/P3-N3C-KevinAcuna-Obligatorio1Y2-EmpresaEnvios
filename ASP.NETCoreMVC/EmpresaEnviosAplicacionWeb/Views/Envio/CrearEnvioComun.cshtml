@using EmpresaEnviosAplicacionWeb.Models
@model CrearEnvioComunVM

@{
    ViewData["Title"] = "Crear Envio Comun";
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion seccion-expandida">
        <h1 class="text-center heading mb-5">Crear Envío Común</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @* Alertas *@
                @if (TempData["Error"] is not null)
                {
                    <div class="alert alert-danger text-center text-uppercase fw-bold mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                        @TempData["Error"]
                    </div>
                }

                <form asp-action="CrearEnvioComun">
                    <fieldset>
                        <legend class="fw-bold text-primary">
                            <i class="bi bi-box-seam"></i> Crear nuevo envío
                        </legend>
                        <p class="text-muted">Ingresa los detalles para registrar un nuevo envío.</p>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="EnvioDTO.EmailCliente" class="control-label">Email Cliente</label>
                            <input asp-for="EnvioDTO.EmailCliente" type="email" class="form-control" required />
                            <span asp-validation-for="EnvioDTO.EmailCliente" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EnvioDTO.Peso" class="control-label"></label>
                            <input asp-for="EnvioDTO.Peso" class="form-control" type="number" step="0.01" value="@(Model.EnvioDTO.Peso == 0 ? "" : Model.EnvioDTO.Peso)" />
                            <span asp-validation-for="EnvioDTO.Peso" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EnvioDTO.AgenciaId" class="control-label">Agencia</label>
                            <select asp-for="EnvioDTO.AgenciaId" class="form-select" required>
                                <option value="" selected>Seleccione</option>
                                @foreach (var agencia in Model.Agencias)
                                {
                                    <option value="@agencia.Id">@agencia.Nombre</option>
                                }
                            </select>
                            <span asp-validation-for="EnvioDTO.AgenciaId" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="form-group d-flex justify-content-between align-items-end py-3 gap-3">
                        <button type="submit" class="btn btn-success fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-box-arrow-in-up"></i> Crear
                        </button>
                        <a asp-action="Listado" class="btn btn-outline-secondary fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left-circle-fill"></i> Volver
                        </a>
                    </div>

                </form>
            </div> <!-- col-md-6 -->
        </div> <!-- row -->
    </section> <!-- section -->
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

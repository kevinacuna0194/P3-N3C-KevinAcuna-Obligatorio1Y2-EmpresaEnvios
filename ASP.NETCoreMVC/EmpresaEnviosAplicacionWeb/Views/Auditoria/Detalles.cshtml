@using DTOs
@model AuditoriaDTO

@{
    ViewData["Title"] = "Detalles Auditoria";
}

@if (Model is null)
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion">
        <h1 class="text-center heading mb-5">Detalles Auditoria</h1>

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                <div class="card shadow border">
                    <div class="card-header bg-warning text-dark text-center">
                        <h4 class="card-title fw-bold">
                            <i class="bi bi-file-earmark-text-fill"></i>
                            Detalles de Auditoría
                        </h4>
                        <p class="card-subtitle text-dark">
                            Revisión de acciones registradas en el sistema y eventos recientes.
                        </p>
                    </div> <!-- card-header -->

                    <div class="card-body">
                        <ul class="list-group list-group-flush px-3">
                            <li class="list-group-item py-2">
                                <strong>@Html.DisplayNameFor(model => model.Id):</strong> @Html.DisplayFor(model => model.Id)
                            </li>
                            <li class="list-group-item py-2">
                                <strong>Acción: </strong> @Html.DisplayFor(model => model.Accion)
                            </li>
                            <li class="list-group-item py-2">
                                <strong>Fecha: </strong> @(Model.Fecha.ToString("dd/MM/yyyy"))
                            </li>
                            <li class="list-group-item py-2">
                                <strong>Id Usuario: </strong> @Html.DisplayFor(model => model.UsuarioId)
                            </li>
                            <li class="list-group-item py-2">
                                <strong>Nombre Usuario: </strong> @Html.DisplayFor(model => model.NombreUsuario)
                            </li>
                            <li class="list-group-item py-2">
                                <strong>Detalle: </strong> @Html.DisplayFor(model => model.Detalle)
                            </li>
                        </ul>
                    </div> <!-- card-body -->

                    <div class="card-footer d-flex justify-content-center">
                        <a asp-action="Listado" class="btn btn-warning fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div> <!-- card-footer -->
                </div> <!-- card -->

            </div> <!-- col-md-6 -->
        </div> <!-- row -->
    </section> <!-- section -->
}

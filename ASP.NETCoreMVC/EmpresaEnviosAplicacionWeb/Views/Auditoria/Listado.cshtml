@using DTOs
@model IEnumerable<AuditoriaDTO>

@{
    ViewData["Title"] = "Listado Auditoria";
}

@if (Model == null || !Model.Any())
{
    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            @TempData["Error"]
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center text-uppercase fw-bold mt-5" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>
            No se encontraron registros
        </div>
    }
}
else
{
    <section class="seccion">
        <h1 class="text-center heading my-5">Listado Auditoria</h1>

        <h3 class="fw-bold text-primary">
            <i class="bi bi-clock-history"></i> Historial de auditoría
        </h3>
        <p class="text-muted">Consulta los registros de auditoría para verificar cambios y eventos.</p>

        <div class="mb-3">
            <a asp-action="Listado" asp-controller="Usuario" class="btn btn-primary fw-bold px-4 py-2 rounded-pill shadow-sm">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="table-responsive shadow border rounded">

            <table class="table table-sm table-hover table-striped table-bordered text-center my-4">
                <thead class="bg-warning text-dark">
                    <tr>
                        <th class="fw-bold">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="fw-bold">
                            @Html.DisplayNameFor(model => model.Accion)
                        </th>
                        <th class="fw-bold">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </th>
                        <th class="fw-bold">
                            Id Usuario
                        </th>
                        <th class="fw-bold">
                            Nombre Usuario
                        </th>
                        <th class="fw-bold text-truncate" style="max-width: 250px;">
                            @Html.DisplayNameFor(model => model.Detalle)
                        </th>
                        <th class="fw-bold">
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Accion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreUsuario)
                            </td>
                            <td class="text-truncate" style="max-width: 250px;">
                                @Html.DisplayFor(modelItem => item.Detalle)
                            </td>
                            <td class="d-flex justify-content-center gap-2">
                                <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm rounded-pill shadow-sm" title="Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div> <!-- table-responsive -->

        <div class="d-flex align-items-center justify-content-center mt-3">
            <i class="bi bi-journal-text text-danger me-2"></i>
            <small class="fw-bold text-danger">
                Total de registros de auditoría: @Model.Count()
            </small>
        </div>

    </section>
}
